class menu :
    def __init__(self):
        self.d={}
        
    def __add__(self,other):
        self.d[other[0]]=other[1]
        return self
    
        
    def __repr__(self):
        return repr(self.d)             
##    def show(self):
##        print(self.d)
m=menu()
